<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".fragments.ExportOptions">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Format Selection -->
            <TextView
                    android:text="Format"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingBottom="8dp"/>

            <Spinner
                    android:id="@+id/formatSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"/>

            <!-- Image Processing Section -->
            <TextView
                    android:text="Image Processing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

            <Switch
                    android:id="@+id/reencodeSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Re-encode images"
                    android:paddingBottom="8dp" android:paddingTop="8dp"/>

            <LinearLayout
                    android:id="@+id/reEncodeOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp"
                    tools:visibility="visible">

                <TextView
                        android:text="Image quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingBottom="8dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                    <SeekBar
                            android:id="@+id/qualitySeekbar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="100"/>

                    <TextView
                            android:id="@+id/qualityText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:paddingStart="12dp"
                            android:minWidth="40dp"
                            android:textAlignment="viewEnd"/>
                </LinearLayout>
            </LinearLayout>

            <Switch
                    android:id="@+id/reziseImageSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resize images"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"/>

            <LinearLayout
                    android:id="@+id/resizeOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp"
                    tools:visibility="visible">

                <TextView
                        android:text="Image size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingBottom="8dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                    <SeekBar
                            android:id="@+id/sizeSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="100"/>

                    <TextView
                            android:id="@+id/sizeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:paddingStart="12dp"
                            android:minWidth="40dp"
                            android:textAlignment="viewEnd"/>
                </LinearLayout>
            </LinearLayout>

            <Switch
                    android:id="@+id/grayscaleSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use grayscale"
                    android:paddingBottom="16dp"
                    android:paddingTop="8dp"/>

            <!-- Divider -->
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#404040"
                    android:layout_marginVertical="12dp"/>

            <!-- ePUB Only Section -->
            <TextView
                    android:text="ePUB Settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingBottom="8dp"/>

            <Switch
                    android:id="@+id/coverSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use cover"
                    android:checked="false"
                    android:paddingBottom="8dp"
                    tools:checked="false" android:paddingTop="8dp"/>

            <LinearLayout
                    android:id="@+id/coverOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp"
                    tools:visibility="visible">

                <!-- Use Page as Cover -->
                <Switch
                        android:id="@+id/coverPageSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use a page as cover"
                        android:checked="true"
                        android:paddingBottom="8dp"
                        tools:checked="true" android:paddingTop="8dp"/>

                <LinearLayout
                        android:id="@+id/coverPageOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:paddingStart="16dp"
                        android:paddingBottom="12dp"
                        tools:visibility="visible">

                    <TextView
                            android:text="Page number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:paddingBottom="8dp"/>

                    <EditText
                            android:id="@+id/coverPageInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Enter page number"
                            android:text="1"
                            android:paddingBottom="12dp"/>
                </LinearLayout>

                <!-- Use Custom File -->
                <Switch
                        android:id="@+id/CoverCustomSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use a custom file"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"/>

                <LinearLayout
                        android:id="@+id/coverCustomOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingStart="16dp"
                        android:paddingBottom="12dp"
                        tools:visibility="visible">

                    <Button
                            android:id="@+id/selectCoverFileBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Cover Image"
                            android:paddingVertical="8dp"
                            android:paddingBottom="8dp"/>

                    <ImageView
                            android:id="@+id/coverPreview"
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:background="#303030"
                            android:padding="8dp"
                            android:visibility="gone"
                            android:paddingBottom="8dp"
                            tools:visibility="visible"
                            tools:src="@android:drawable/ic_menu_gallery"/>

                    <TextView
                            android:id="@+id/coverFileName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No file selected"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:textColor="#999999"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Button Bar -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:padding="16dp"
            android:layout_weight="0">

        <Button
                android:id="@+id/Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:backgroundTint="#616161"
                android:paddingHorizontal="24dp" />

        <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

        <Button
                android:id="@+id/Proceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed"
                android:paddingHorizontal="24dp" />
    </LinearLayout>
</LinearLayout>