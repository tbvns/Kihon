<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="12dp"
              android:gravity="center_vertical"
              android:background="?attr/selectableItemBackground">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
                android:id="@+id/rendered_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end" android:clipToOutline="false" android:fallbackLineSpacing="true"/>
        <TextView
                android:id="@+id/rendered_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="2dp" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginStart="8dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
            <Button
                    android:id="@+id/btn_open"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="4dp" app:icon="@drawable/open"/>
            <Button
                    android:id="@+id/btn_share"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="4dp" app:icon="@drawable/share"/>
            <Button
                    android:id="@+id/btn_delete"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="4dp"
                    android:textColor="@color/design_default_color_error" app:icon="@drawable/delete"
                    app:iconTint="#FF0000"/>
        </LinearLayout>
        <TextView
                android:id="@+id/rendered_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp" />
    </LinearLayout>
</LinearLayout>